{
  "compilerOptions": { 
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "outDir": "./",
    "rootDir": "./src",
    "removeComments": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}