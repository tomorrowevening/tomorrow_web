{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "three"
  ],
  "typedocOptions": {
    "entryPoints": [
      "./src/debug.ts",
      "./src/dom.ts",
      "./src/loader.ts",
      "./src/math.ts",
      "./src/raf.ts",
      "./src/three.ts"
    ],
    "out": "docs"
  },
  "rules": {
    "import/extensions": "off"
 }
}